<p id="notice"><%= notice %></p>

<h1>Constructions</h1>

<table>
  <thead>
    <tr>
      <th>Object name</th>
      <th>Type 0</th>
      <th>U value</th>
      <th>U value corr</th>
      <th>Cm</th>
      <th>Metal cladding</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constructions.each do |construction| %>
      <tr>
        <td><%= construction.object_name %></td>
        <td><%= construction.type_0 %></td>
        <td><%= construction.u_value %></td>
        <td><%= construction.u_value_corr %></td>
        <td><%= construction.cm %></td>
        <td><%= construction.metal_cladding %></td>
        <td><%= link_to 'Show', construction %></td>
        <td><%= link_to 'Edit', edit_construction_path(construction) %></td>
        <td><%= link_to 'Destroy', construction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

